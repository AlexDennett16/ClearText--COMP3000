<UserControl
    x:Class="ClearText.Dialogs.PageNameDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ClearText.Dialogs"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:PageNameDialogViewModel"
    mc:Ignorable="d">
    <StackPanel Spacing="12">
        <TextBlock Text="Enter page name:" />
        <TextBox Text="{Binding PageName}" />

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Command="{Binding Cancel}" Content="Cancel" />
            <Button Command="{Binding Confirm}" Content="Create" />
        </StackPanel>
    </StackPanel>

</UserControl>
