<Window
    x:Class="ClearText.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseViews="clr-namespace:ClearText.BaseTypes.BaseViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ClearText.Views"
    xmlns:vm="clr-namespace:ClearText.ViewModels"
    Title="ClearText"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainWindowViewModel"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <views:ToolbarView Grid.Row="0" DockPanel.Dock="Top" />
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />

        <baseViews:ToastHostView
            Grid.Row="1"
            Margin="16"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            DataContext="{Binding ToastService}" />

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Background="#80000000"
            IsVisible="{Binding DialogViewModel, Converter={StaticResource NullToBoolConverter}}">
            <baseViews:DialogViewBase>
                <ContentControl Content="{Binding DialogViewModel}" />
            </baseViews:DialogViewBase>

        </Border>

    </Grid>
</Window>
