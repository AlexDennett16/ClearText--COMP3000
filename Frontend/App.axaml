<Application
  x:Class="ClearText.App"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:frontend="clr-namespace:ClearText"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:ClearText.Views"
  xmlns:vm="clr-namespace:ClearText.ViewModels"
  RequestedThemeVariant="Default"
  mc:Ignorable="d">
  <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

  <Application.Styles>
    <FluentTheme />
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://ClearText/Styles/Brushes.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.DataTemplates>
    <DataTemplate x:DataType="vm:MainWindowViewModel">
      <frontend:MainWindow />
    </DataTemplate>
    <DataTemplate x:DataType="vm:PageSelectionViewModel">
      <views:PageSelectionView />
    </DataTemplate>
    <DataTemplate x:DataType="vm:TextEditorViewModel">
      <views:TextEditorView />
    </DataTemplate>
  </Application.DataTemplates>


</Application>
