<UserControl
    x:Class="ClearText.Views.TextEditorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avaloniaEdit="using:AvaloniaEdit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ClearText.ViewModels"
    x:DataType="vm:TextEditorViewModel"
    mc:Ignorable="d">

    <DockPanel>
        <Button
            Command="{Binding ReturnCommand}"
            Content="Back"
            DockPanel.Dock="Top" />

        <Button
            Command="{Binding SaveCommand}"
            Content="Save"
            DockPanel.Dock="Top" />

        <Button
            Command="{Binding AnalyseGrammarCommand}"
            Content="Analyse Grammar"
            DockPanel.Dock="Top" />

        <Border
            Margin="30"
            BorderBrush="Gray"
            BorderThickness="2">
            <avaloniaEdit:TextEditor
                x:Name="Editor"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ShowLineNumbers="True"
                WordWrap="True" />
        </Border>
    </DockPanel>
</UserControl>
